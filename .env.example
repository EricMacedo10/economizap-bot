# ====================================
# TELEGRAM CONFIGURATION
# ====================================
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Your Telegram channel username (include @)
TELEGRAM_CHANNEL_ID=@your_channel_name

# ====================================
# DATABASE CONFIGURATION
# ====================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/tabarato

# For local development, you can use SQLite:
# DATABASE_URL=sqlite:///tabarato.db

# ====================================
# MERCADO LIVRE API
# ====================================
# Register at: https://developers.mercadolivre.com.br/
MERCADOLIVRE_APP_ID=your_ml_app_id
MERCADOLIVRE_SECRET_KEY=your_ml_secret_key

# ====================================
# AMAZON PRODUCT ADVERTISING API
# ====================================
# Register at: https://affiliate-program.amazon.com.br/
AMAZON_ACCESS_KEY=your_amazon_access_key
AMAZON_SECRET_KEY=your_amazon_secret_key
AMAZON_PARTNER_TAG=your_amazon_partner_tag
AMAZON_REGION=us-east-1

# ====================================
# SHOPEE AFFILIATE API
# ====================================
# Register at: https://open.shopee.com/
SHOPEE_PARTNER_ID=your_shopee_partner_id
SHOPEE_PARTNER_KEY=your_shopee_partner_key

# ====================================
# ALIEXPRESS AFFILIATE API
# ====================================
# Register at: https://portals.aliexpress.com/
ALIEXPRESS_APP_KEY=your_aliexpress_app_key
ALIEXPRESS_APP_SECRET=your_aliexpress_app_secret
ALIEXPRESS_TRACKING_ID=your_tracking_id

# ====================================
# APPLICATION SETTINGS
# ====================================
# Environment: development, staging, production
ENVIRONMENT=development

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Search timeout in seconds (per marketplace)
SEARCH_TIMEOUT=10

# Maximum results to return per marketplace
MAX_RESULTS_PER_MARKETPLACE=5

# Minimum similarity percentage to group products (0-100)
SIMILARITY_THRESHOLD=70

# Minimum discount percentage to post to channel
MIN_DISCOUNT_FOR_CHANNEL=30

# Rate limiting: max searches per user per minute
MAX_SEARCHES_PER_MINUTE=10

# Cache expiration in seconds (1 hour = 3600)
CACHE_EXPIRATION=3600
